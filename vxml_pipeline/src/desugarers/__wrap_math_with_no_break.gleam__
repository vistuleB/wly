// 🏖️🏖️ Desugarer 🏖️🏖️
// 🏖️🏖️🏖️🏖️🏖️🏖️🏖️🏖️🏖️🏖️🏖️
//------------------------------------------------53
/// wraps math elements with no-break containers to 
/// prevent line breaks
pub fn wrap_math_with_no_break() -> Desugarer {
  Desugarer(
    name,
    option.None,
    "
/// wraps math elements with no-break containers to
/// prevent line breaks
    ",
    case param_to_inner_param(Nil) {
      Error(error) -> fn(_) { Error(error) }
      Ok(inner) -> transform_factory(inner)
    }
  )
}

