import blame as bl

fn child_map(
  vxml: VXML,
  inner: InnerParam,
) -> VXML {
  case vxml {
    V(_, tag, _, _) if tag == inner.0 -> V(desugarer_blame(14), inner.1, [], [vxml])
    _ -> vxml
  }
}

fn nodemap(
  vxml: VXML,
  inner: InnerParam,
) -> VXML {
  case vxml {
    V(_, tag, _, children) -> {
      case list.contains(inner.2, tag) {
        False -> vxml
        True -> {
          let children = list.map(children, child_map(_, inner))
          V(..vxml, children: children)
        }
      }
    }
    _ -> vxml
  }
}

fn nodemap_factory(inner: InnerParam) -> n2t.OneToOneNoErrorNodeMap {
  nodemap(_, inner)
}

fn transform_factory(inner: InnerParam) -> DesugarerTransform {
  nodemap_factory(inner)
  |> n2t.one_to_one_no_error_nodemap_2_desugarer_transform()
}

fn param_to_inner_param(param: Param) -> Result(InnerParam, DesugaringError) {
  Ok(param)
}

type Param = #(String, String,     List(String))
//             ↖       ↖           ↖               
//             tag     thing to    ...if child of
//             tag     wrap with   one of these  
type InnerParam = Param

pub const name = "wrap_with_if_child_of"
fn desugarer_blame(line_no: Int) {bl.Des([], name, line_no)}

