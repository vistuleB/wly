import vxml.{type VXML, V, type Attr, Attr}
import blame as bl

fn nodemap(
  vxml: VXML,
  inner: InnerParam,
) -> VXML {
  case vxml {
    V(_, tag, attrs, _) if tag == inner.0 ->
      V(..vxml, tag: inner.1, attrs: list.append(attrs, inner.2))
    _ -> vxml
  }
}

fn nodemap_factory(inner: InnerParam) -> n2t.OneToOneNoErrorNodeMap {
  nodemap(_, inner)
}

fn transform_factory(inner: InnerParam) -> DesugarerTransform {
  nodemap_factory(inner)
  |> n2t.one_to_one_no_error_nodemap_2_desugarer_transform
}

fn param_to_inner_param(param: Param) -> Result(InnerParam, DesugaringError) {
  let attrs = param.2
    |> list.map(fn(x) { Attr(desugarer_blame(31), x.0, x.1) })
  Ok(#(param.0, param.1, attrs))
}

type Param = #(String,   String,   List(#(String, String)))
//             ↖         ↖         ↖
//             old_tag   new_tag   list of attrs 
//                                 as key value pairs
type InnerParam = #(String, String, List(Attr))

pub const name = "rename_with_attributes"
fn desugarer_blame(line_no: Int) { bl.Des([], name, line_no) }

